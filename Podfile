  pod 'MagazineLayout'
  
  pod 'RealmSwift'
  pod 'MaterialComponents'
  pod 'SwiftLint'
  pod 'CryptoSwift', '1.1.2'
  
  #Logger Framework
  pod 'CocoaLumberjack/Swift'
  
end

target 'DutchNewsTests' do
  inherit! :search_paths
  pod 'RxTest'
  pod 'RxBlocking'
